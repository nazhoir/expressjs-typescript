{
  "watch": ["src", ".env"],
  "ext": "js,ts,json",
  "ignore": ["src/logs/*", "src/**/*.{spec,test}.ts"],
  "exec": "ts-node -r tsconfig-paths/register --transpile-only src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "start": "echo Aplication starting",
    "restart": "echo Aplication restarted",
    "crash": "echo Aplication crashed"
  },
  "verbose": false
}
